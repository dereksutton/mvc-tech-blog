<div class="register-container">
    <div class="text-center">
        <h1 class="register-title">Register</h1>
        <form id="register-form">
            <div class="form-group d-flex flex-column align-items-center">
                <label for="user-register" class="field-custom">Username</label>
                <input type="text" id="username-register" name="username" placeholder="Username" required>
            </div>
            <div class="form-group d-flex flex-column align-items-center">
                <label for="password-register" class="field-custom">Password</label>
                <input type="password" id="password-register" name="password" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-secondary register-btn">Register</button>
        </form>
    </div>
</div>

<script src="./js/register.js"></script>