<div class="register-container">
    <h1>Register</h1>
    <div>
        <form id="register-form" action="/register" method="POST">
            <div class="form-group">
                <label for="user-register" class="field-custom">Username</label>
                <input type="text" id="username-input" name="username" placeholder="Username" required>
            </div>
            <div class="form-group">
                <label for="password-register" class="field-custom">Password</label>
                <input type="password" id="password-input" name="password" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-secondary register-btn">Register</button>
        </form>
    </div>
</div>

<script src="./js/register.js"></script>