<div class="container">
    <h1>Login</h1>
    <div> 
        <form id="login-form" action="/login" method="POST">
        <div class="form-group">
            <label class="field-custom">Username</label>
            <input type="text" id="username-input" name="username" placeholder="Username" required>
        </div>
        <div class="form-group">
            <label class="field-custom">Password</label>
            <input type="password" id="password-input" name="password" placeholder="Password" required>
        </div>
            <button type="submit" class="btn btn-secondary login-btn">Login</button>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>