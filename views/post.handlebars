<div>
    <div class="post-card">
        <div class="post-container">
            <div class="post-header">
                <h1>{{title}}</h1>
            </div>
            <div class="post-creator">
                <p class="creator-name">{{user.username}}</p>
            </div>
            <div class="post-content">
                <p>{{content}}</p>
            </div>
            <div>
                <p class="post-date">{{format_date createdAt}}</p>
            </div>
        </div>
    </div>
</div>

<div class="comment-header">
    <p>{{comments.length}} comments in this post.</p>
</div>
{{#each comments as |comment|}}
<div class="card-comment">
    <h1 class="head-comment">{{comment.user.username}}</h1>
    <p class="text-comment">{{comment.comment}}</p>
    <p class="date-comment">{{format_date comment.createdAt}}</p>
</div>
{{/each}}

{{#if logged_in}}
<div class="comment-header">
    <h1>Add Comment</h1>
</div>
<div>
    <form action="" id="form-comment{{post.id}}" class="form-login">
        <div class="form-group">
            <label class="field-custom">Comment</label>
            <input type="text" id="post-comment{{id}}" data-type="{{post.id}}">
        </div>
        <button type="submit" data-id="{{id}}" id="comment-btn" class="btn btn-secondary">Post</button>
    </form>
</div>
{{/if}}

<script src="/js/post.js"></script>